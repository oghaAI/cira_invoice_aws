# CIRA Invoice AWS - Staging Environment Configuration
# This template is for staging environment using AWS RDS

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_PROFILE=default

# CDK Configuration
CDK_DEFAULT_ACCOUNT=YOUR_AWS_ACCOUNT_ID
CDK_DEFAULT_REGION=us-east-1

# ============================================
# Database Configuration (RDS)
# ============================================
USE_EXTERNAL_DATABASE=false

# DATABASE_URL will be automatically retrieved from AWS Secrets Manager after RDS deployment
# Do not set this manually for RDS deployments
DATABASE_URL=

# ============================================
# Azure OpenAI Configuration
# ============================================
# Store these in AWS Secrets Manager for production-grade security
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# ============================================
# Mistral Configuration (Optional)
# ============================================
MISTRAL_API_KEY=your-mistral-api-key

# ============================================
# Application Configuration
# ============================================
NODE_ENV=staging
LOG_LEVEL=info

# ============================================
# Deployment Configuration
# ============================================
STACK_PREFIX=CiraInvoice
ENABLE_DELETION_PROTECTION=true
LOG_RETENTION_DAYS=14

# ============================================
# RDS Configuration (Applied during CDK deployment)
# ============================================
# Database instance class
DB_INSTANCE_CLASS=db.t3.small

# Allocated storage in GB
DB_ALLOCATED_STORAGE=50

# Enable Multi-AZ deployment
DB_MULTI_AZ=false

# Backup retention period in days
DB_BACKUP_RETENTION_DAYS=14
