{
  "name": "@cira/database",
  "version": "1.0.0",
  "description": "Database layer with Drizzle ORM for invoice processing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint --config ../../eslint.config.js src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@cira/shared": "*",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.13.0",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4"
  },
  "keywords": [
    "database",
    "drizzle",
    "postgresql",
    "orm"
  ]
}
