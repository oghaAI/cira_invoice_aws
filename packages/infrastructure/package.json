{
  "name": "@cira/infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure definitions for invoice processing system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:app": "pnpm --filter @cira/database build && rm -f ../../dist/.tsbuildinfo && tsc -p tsconfig.json",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint --config ../../eslint.config.js src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "deploy": "npm run build:app && cdk deploy --all",
    "deploy:dev": "pnpm build:app && cdk deploy --all --context environment=dev",
    "deploy:staging": "npm run build:app && cdk deploy --all --context environment=staging",
    "deploy:prod": "npm run build:app && cdk deploy --all --context environment=prod",
    "migrate:dev": "bash scripts/migrate.sh dev",
    "migrate:staging": "bash scripts/migrate.sh staging",
    "migrate:prod": "bash scripts/migrate.sh prod",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "destroy": "cdk destroy"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.645.0",
    "@cira/shared": "workspace:*",
    "aws-cdk-lib": "^2.214.0",
    "constructs": "^10.4.2",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "aws-cdk": "^2.214.0"
  },
  "keywords": [
    "infrastructure",
    "aws",
    "cdk",
    "iac"
  ]
}
