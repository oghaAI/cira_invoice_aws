# CIRA Invoice AWS - Development Environment Configuration
# This template is for development environment using Supabase

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_PROFILE=default

# CDK Configuration
CDK_DEFAULT_ACCOUNT=YOUR_AWS_ACCOUNT_ID
CDK_DEFAULT_REGION=us-east-1

# ============================================
# Database Configuration (Supabase)
# ============================================
USE_EXTERNAL_DATABASE=true

# Supabase connection string
# Get this from your Supabase project settings > Database > Connection string > Node.js
DATABASE_URL=postgresql://postgres.[project-id]:[password]@aws-1-ap-southeast-1.pooler.supabase.com:6543/postgres

# ============================================
# Azure LLM Configuration
# ============================================
AZURE_API_ENDPOINT=https://resource-name.services.ai.azure.com/models
AZURE_API_KEY=api_key
AZURE_MODEL=model_name

# ============================================
# Mistral Configuration (Optional)
# ============================================
MISTRAL_API_KEY=your-mistral-api-key

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# Deployment Configuration
# ============================================
STACK_PREFIX=CiraInvoice
ENABLE_DELETION_PROTECTION=false
LOG_RETENTION_DAYS=7
