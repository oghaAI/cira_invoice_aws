# CIRA Invoice AWS - Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_PROFILE=default

# CDK Configuration (for deployment)
CDK_DEFAULT_ACCOUNT=
CDK_DEFAULT_REGION=us-east-1

# ============================================
# Database Configuration
# ============================================
# Set to "true" to use external database (Supabase), "false" to use RDS
USE_EXTERNAL_DATABASE=false

# Database connection string (required if USE_EXTERNAL_DATABASE=true)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# ============================================
# Azure OpenAI Configuration (Required)
# ============================================
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# ============================================
# Mistral Configuration (Optional)
# ============================================
MISTRAL_API_KEY=

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# Deployment Configuration (Optional)
# ============================================
# Stack name prefix (optional, defaults to "CiraInvoice")
STACK_PREFIX=CiraInvoice

# Enable deletion protection for production
ENABLE_DELETION_PROTECTION=false

# CloudWatch log retention in days
LOG_RETENTION_DAYS=7
